generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stream {
  id              String    @id @default(cuid())
  name            String    @unique
  rtmpUrl         String
  rtspUrl         String
  status          String
  logPath         String
  restartAttempts Int
  startTime       DateTime?
  lastHealthCheck DateTime?
  resolution      String?
  fps             Int?
  videoBitrate    String?
  audioBitrate    String?
  disableAudio    Boolean?
  isHealthy       Boolean?  @default(false)
  previewPath     String?   // üî• –¥–æ–±–∞–≤–ª—è–µ–º –ø—É—Ç—å –∫ –ø—Ä–µ–≤—å—é
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

